{
  "name": "bonsai-pack-st2",
  "version": "1.0.0",
  "description": "for static homepage",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/*",
    "pug": "pug -H -o dist/ -b src/pug/**",
    "copy": "mkdirp dist/assets && cp -r src/img/ dist/assets/img/ && cp -r src/fonts/ dist/assets/fonts/ && cp -r src/movie/ dist/assets/movie/",
    "build": "run-p build:*",
    "build:pug": "yarn run pug",
    "build:webpack": "webpack --config ./build/webpack.production.config.js && rm ./dist/assets/js/style.js",
    "build:copy": "yarn run copy",
    "dev": "run-p watch:*",
    "watch:pug": "yarn run pug -- -w -P",
    "watch:webpack": "webpack --config ./build/webpack.develop.config.js --watch",
    "watch:img": "watch 'yarn run copy' ./src/img/",
    "watch:server": "browser-sync start --server --serveStatic dist --files 'dist/assets/css/*.css, dist/assets/js/*.js, **/*.html'",
    "lint": "run-p lint:*",
    "lint:js": "eslint --fix ./src/js/**",
    "lint:sass": "prettier --write ./src/css/**/*.scss",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.46",
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "7.0.0-beta.46",
    "@fortawesome/fontawesome": "^1.1.8",
    "@fortawesome/fontawesome-free-brands": "^5.0.13",
    "@fortawesome/fontawesome-free-regular": "^5.0.13",
    "@fortawesome/fontawesome-free-solid": "^5.0.13",
    "autoprefixer": "^8.4.1",
    "babel-core": "7.0.0-bridge.0",
    "babel-loader": "^7.1.4",
    "browser-sync": "^2.24.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-watch": "^3.1.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "glob": "^7.1.2",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "path": "^0.12.7",
    "postcss-loader": "^2.1.5",
    "prettier": "^1.12.1",
    "prettier-eslint": "^8.8.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass-loader": "^7.0.1",
    "watch": "^1.0.2",
    "webpack": "^4.8.1",
    "webpack-cli": "^2.1.3",
    "webpack-merge": "^4.1.2",
    "yarn-run-all": "^3.1.1"
  }
}
