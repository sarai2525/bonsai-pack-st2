{
  "name": "bonsai-pack-st2",
  "version": "1.0.0",
  "description": "for static homepage",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf dist/*",
    "del": "rm ./dist/assets/js/style.js && rm -rf ./dist/assets/js/Users",
    "pug": "pug -P -o dist/ src/pug/",
    "build": "run-p build:*",
    "build:pug": "yarn run pug",
    "build:webpack": "webpack --config ./build/webpack.production.config.js && yarn run del",
    "dev": "run-p watch:*",
    "watch:pug": "yarn run pug -w",
    "watch:webpack": "webpack --config ./build/webpack.develop.config.js --watch",
    "watch:server": "browser-sync start --server --serveStatic dist --files 'dist/assets/css/*.css, dist/assets/js/*.js, **/*.html'",
    "lint": "run-p lint:*",
    "lint:js": "eslint --fix ./src/js/**",
    "lint:sass": "prettier --write ./src/css/**/*.scss"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint && git add ."
    }
  },
  "dependencies": {
    "@babel/polyfill": "7.0.0-beta.49",
    "jquery": "^3.3.1"
  },
  "devDependencies": {
    "@babel/core": "7.0.0-beta.49",
    "@babel/preset-env": "7.0.0-beta.49",
    "autoprefixer": "8.6.0",
    "babel-loader": "^8.0.0-beta.3",
    "browser-sync": "^2.24.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "11",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "eslint-watch": "3.1.5",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "glob": "^7.1.2",
    "husky": "^1.0.0-rc.8",
    "image-webpack-loader": "4.3.0",
    "lodash": "^4.17.10",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "normalize.css": "^8.0.0",
    "optimize-css-assets-webpack-plugin": "4.0.2",
    "path": "^0.12.7",
    "postcss-loader": "^2.1.5",
    "prettier": "1.13.4",
    "prettier-eslint": "^8.8.1",
    "pug": "^2.0.3",
    "pug-cli": "https://github.com/pugjs/pug-cli.git",
    "reset-css": "4.0.1",
    "sass-loader": "7.0.3",
    "webpack": "4.11.1",
    "webpack-cli": "^3.0.2",
    "webpack-merge": "^4.1.2",
    "yarn-run-all": "^3.1.1"
  }
}
