block var
  -
    var metas = {
      title: '',
      url: '',
      keyword: '',
      description: '',
      og_image: ''
    }

doctype html
html
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport", content="width=device-width, initial-scale=1")
    block title
      title= (metas.title || '')
    block meta
      meta(name="description", content=(metas.description || ''))
      meta(property="og:locale" content="ja_JP")
      meta(property="og:title" content=(metas.title || ''))
      meta(property="og:description" content=(metas.description || ''))
      meta(property="og:keywords" content=(metas.keyword || ''))
      meta(property="og:type" content="website")
      meta(property="og:url" content=(metas.url || ''))
      meta(property="og:image" content=(metas.og_image || '/assets/img/og_image.jpg'))
      meta(property="og:image:width" content="1200")
      meta(property="og:image:height" content="600")
      meta(property="og:site_name" content=(metas.title || ''))
      meta(name="robots" content="index,follow")
    link(rel='shortcut icon' href='/assets/img/favicon.ico')
    link(rel='stylesheet', href='/assets/css/style.css?' + new Date().getTime())
    script(src='assets/js/vendor.js?' + new Date().getTime())
  block content
